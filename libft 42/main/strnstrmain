
int main() {
    const char *chaine = "Ceci est un exemple de chaîne de caractères.";
    const char *sous_chaine = ".";

    // Utilisation de strnstr pour rechercher la sous-chaîne
    char *resultat = ft_strnstr(chaine, sous_chaine, strlen(chaine));

    if (resultat != NULL) {
        printf("La sous-chaîne '%s' a été trouvée à la position %ld.\n", sous_chaine, (resultat - chaine));
    } else {
        printf("La sous-chaîne '%s' n'a pas été trouvée dans la chaîne donnée.\n", sous_chaine);
    }

    return 0;
}
